@model IEnumerable<WebMVC.Models.Test>

<h2>Test 資料列表</h2>

<a asp-action="Create" class="btn btn-primary">新增資料</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>標題</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">編輯</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
